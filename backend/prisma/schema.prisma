// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id @default(uuid())
  title       String
  due_date    DateTime
  value       String
  description String
  is_debit    Boolean  @default(true)
  is_deposit  Boolean  @default(true)

  @@map("transactions")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}
